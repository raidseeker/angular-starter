{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "@api/*": ["projects/dev-api/*"],
      "@testing/*": ["projects/main-app/src/app/testing/*"],
      "@shared/*": ["projects/main-app/src/app/shared/*"],
      "@environments/*": ["projects/main-app/src/environments/*"]
    }
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
